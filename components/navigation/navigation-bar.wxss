/* components/navigation-bar.wxss */
.nav-bar {
  z-index: 10000;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  color: #fff;
  background: #409EFF;
}
.nav-bar .bar-back {
  width: 50rpx;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.nav-bar .bar-title {
  width: 60%;
  font-size: 36rpx;
  position: absolute;
  margin-left: 15rpx;
  box-sizing: border-box;
  color: white;
  text-align: center;
  /* background-color: yellow; */
  display: flex;
  align-items: center;
  justify-content: flex-start;
  
}
.nav-bar .bar-title text {
  text-align: left;
  /* width: 100%; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.icon-back {
  /* opacity: 1 !important; */
  margin-left: -15rpx;
  font-size: 40rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  box-sizing: border-box;
  background-color: transparent;
  /* height: 100%; */
  display: flex;
  align-items: center;
  justify-content: center;
}