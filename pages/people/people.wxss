/* pages/people/people.wxss */
.user-info {
  width: 100%;
  height: 150px;
  background-color: beige;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-login {
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 100px;
  border-radius: 100rpx;
  /* outline: none; */
  background-color: red;
  color: white;
}
.login {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 150px;
  width: 100%;
}
.avatar {
  width: 220rpx;
  height: 220rpx;
}
.img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 100rpx;
  display: block;
  margin: 20rpx 20rpx 0rpx 20rpx;
}
.list {
  width: 100%;
}
.cell-group {
  z-index: 100;
}

.my-cell {
  font-size: 36rpx !important;
  height: 120rpx !important;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
