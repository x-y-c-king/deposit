/* pages/detail/index.wxss */
.map {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.notice {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.nav {
  opacity: 0;
  z-index: 100000;
  width: 100%;
  /* height: ; */
  position: fixed;
  top: 0;
  left: 0;
}

.scorll {
  padding-bottom: 100rpx;
  /* height: 200vh; */
}
.common {
  width: 100%;
  min-height: 200rpx;
}

.btn {
  width: 100%;
  height: 120rpx;
  background-color: white;
  border-top: #aaa solid 1rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 32rpx;
  box-sizing: border-box;
}

.service {
  width: 200rpx;
  height: 80rpx;
  /* margin-left: 32rpx; */
}

.to_index {
  width: 200rpx;
  border-radius: 12rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  background-color: #409EFF;
  font-size: 32rpx;

  /* margin-right: 32rpx; */
}

.title {
  width: 100%;
  height: 100rpx;
  line-height: 40rpx;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  font-weight: 600;
}

.item {
  border-top: #f5f5f5 solid 4rpx;
  box-sizing: border-box;
  padding: 30rpx;
  /* line-height: 120rpx; */
  /* height: 130rpx; */
  line-height: 80rpx;
  font-size: 36rpx;
  font-weight: 550;

}

.type1, .type2 {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  width: 100%; 
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  /* background-color: #409EFF; */
  background-color: #f0f0f0;
  border-radius: 16rpx;
  color: #333;
}
.type1 > view:only-child {
  /* line-height: 80rpx; */
  padding: 20rpx 0;
  line-height: 40rpx;
  font-size: 28rpx !important;
}
.type2 {
  margin-top: 30rpx;
}
.type1 > view:last-child, .type2 > view:last-child {
  color: #555;
  font-size: 24rpx;
}
.list {
  font-size: 28rpx;
  font-weight: 600;
  padding-left: 20rpx;

}
.list > view >  text {
  font-size: 26rpx;
  font-weight: 400;
  margin-left: 5rpx;
}
.more {
  color: #409EFF;
  font-size: 26rpx;
  font-weight: 400;
}
.footer image {
  width: 100%;
}
.loading {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;

}
.user-info {
  display: flex;
  align-items: center;
}
.user-avatar {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-avatar > image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.user-name {
  line-height: 60rpx;
  flex: 4;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.user-name > view:first-child {
  font-size: 34rpx;

}
.user-name > view:last-child {
  font-size: 28rpx;
  color: #666;
}
.content {
  font-size: 34rpx;
  line-height: 50rpx;
  padding: 20rpx 0;
}

