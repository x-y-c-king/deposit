/**index.wxss**/
.container {
  width: 750rpx;
  height: 100vh;
  position: relative;
  overflow: hidden;
  padding: 0px;
  margin: 0px;
}

.map {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}

.customCallout {
  width: 200rpx;
  /* height: 80rpx; */
  height: 200rpx;
  /* line-height: 80rpx; */
  /* text-align: center; */
  /* background-color: red; */
  /* border-radius: 30rpx; */
  /* color: white; */
}

.info {
  /* pointer-events: none; */
  z-index: 1000;
  width: 700rpx;
  height: 320rpx;
  background-color: white;
  /* margin: 0 auto; */
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  transform: translateX(-50%);
}

.detail-info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.detail-img {
  width: 40%;
  height: 280rpx;
  overflow: hidden;
  /* background-color: red; */
  text-align: center;
}

.detail-img>image {
  width: 100%;
  height: 280rpx;
}

.detail-text {
  width: 60%;
  height: 280rpx;
  /* background-color: green; */
  padding: 10rpx 0 0 10rpx;
  box-sizing: border-box;
  position: relative;
}
.detail-text > view{
  margin-top: 15rpx;
}

.detail-text .price {
  font-size: 24rpx;
}

.detail-text .name {
  margin-top: 0rpx;
  font-size: 28rpx;
  font-weight: 550;
}

.detail-text .name .text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.detail-text .price text:last-child {
  margin-left: 30rpx;
}

.detail-text .timer {
  font-size: 24rpx;
  color: #ff3333;
  font-weight: 550;
}

.address {
  font-size: 26rpx;
}

.btn {
  position: absolute;
  bottom: 5rpx;
  /* right: -20%; */
  right: 0;
  background-color: #409EFF;
  width: 7em;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  color: white;
  font-size: 14px;
  /* text-align: center; */

}

