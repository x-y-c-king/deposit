<view class="container">
	<block vx:if='{{ hashMapShow }}'>
		<map name="location" id="myMap" class="map" longitude='{{ log }}' latitude="{{ lat }}" scale='16'
			show-location='{{ true }}' markers='{{ markers }}' bindcallouttap="callouttap" bindlabeltap="labeltap"
			bindmarkertap='handleMaker'>

			<cover-view slot="callout">
				<block wx:for="{{markers}}" vx:for-index="index" wx:key="index">
					<cover-view class="customCallout" marker-id="{{item.id}}">
						{{ item.id }}
					</cover-view>
				</block>
				<!-- <cover-view marker-id='1'>1</cover-view>
				<cover-view marker-id='2'>2</cover-view>
				<cover-view marker-id='3'>3</cover-view> -->
			</cover-view>

		</map>
	</block>

</view>


