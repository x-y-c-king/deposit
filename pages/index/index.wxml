<view class="container">
	<block vx:if='{{ hashMapShow }}'>
		<!-- markers='{{ markers }}' -->
		<map  name="location" id="map" enable-poi="{{ true }}" 
			class="map" markers='{{ markers }}'
			
			longitude='{{selectLog || log }}' latitude="{{selectLat || lat }}" scale='16' show-location='{{ true }}'
			bindcallouttap="callouttap" bindlabeltap="labeltap" bindmarkertap='handleMaker'
			bindlabeltap='handleLabel'
			bindtap='handleMap'>

			<!-- <cover-view slot="callout">
